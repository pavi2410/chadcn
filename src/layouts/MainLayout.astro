---
import '@/styles/global.css';
import { Footer } from '@/components/layout/Footer';
import { Header } from '@/components/layout/Header';

interface Props {
  title: string;
  description?: string;
}

const { 
  title, 
  description = "Discover and explore shadcn UI component registries created by the community." 
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/chadcn.png" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="min-h-screen bg-background antialiased">
    <Header client:load />
    
    <main>
      <slot />
    </main>
    
    <Footer client:load />
  </body>
</html>
